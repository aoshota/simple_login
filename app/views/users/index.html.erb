<h1>ユーザー一覧</h1>

<%= link_to '登録画面へ', '/users/new' %>

<table>
	<tr>
		<th>ユーザー名</th>
	</tr>

	<% @users.each do |user| %>
		<tr>
			<td><%= user.name %></td>
			<td><%= link_to 'Edit', edit_users_path(user) %></td>
			<td><%= link_to 'Destroy', destroy_users_path(user), method: :delete, data: { confirm: 'Are you sure' } %></td>
		</tr>
	<% end %>
</table>
